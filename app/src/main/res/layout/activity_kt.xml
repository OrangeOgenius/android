<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ue.activity.KtActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/frage"
            android:layout_below="@id/toolbar">

    </FrameLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" android:background="@color/color_orange" android:id="@+id/toolbar">

        <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView12"
                android:layout_centerInParent="true" android:textColor="@android:color/white" android:textSize="18sp"
                android:textStyle="bold"/>
        <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent" app:srcCompat="@mipmap/back" android:id="@+id/back"
                android:padding="10dp" android:visibility="gone"/>
        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp" app:srcCompat="@mipmap/yt_log_out" android:id="@+id/logout"
                android:layout_alignParentEnd="true" android:padding="5dp" android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>