<?xml version="1.0" encoding="utf-8"?>
<com.de.rocket.ue.layout.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.de.rocket.ue.layout.PercentRelativeLayout
        android:id="@+id/prl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FF3C80B5"
        app:layout_heightPercent="5%sh"
        tools:layout_heightPercent="5%h">

        <com.de.rocket.ue.layout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_index"
                android:layout_width="0dp"
                android:textColor="@color/color_FF3C80B5"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"/>

            <!--边框-->
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_FF0A75C6"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"/>

            <!--边框-->
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_FF0A75C6"/>

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center"/>

            <!--边框-->
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_FF0A75C6"/>

            <TextView
                android:id="@+id/tv_tire_press"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center"/>

            <!--边框-->
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_FF0A75C6"/>

            <TextView
                android:id="@+id/tv_tire_temp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center"/>

            <!--边框-->
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_FF0A75C6"/>

            <com.de.rocket.ue.layout.PercentRelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15">

                <ImageView
                    android:id="@+id/iv_bat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/yt_icon_battery"
                    android:layout_centerInParent="true"
                    app:layout_widthPercent="90%w"/>

                <TextView
                    android:id="@+id/tv_bat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"/>

            </com.de.rocket.ue.layout.PercentRelativeLayout>

        </com.de.rocket.ue.layout.PercentLinearLayout>

        <!--上边框-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_FF0A75C6"/>

        <!--左边框-->
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_FF0A75C6"/>

        <!--左一边框-->
        <View
            android:layout_width="0.5dp"
            android:layout_toEndOf="@+id/tv_number"
            android:layout_height="match_parent"
            android:background="@color/color_FF0A75C6"/>

        <!--右边框-->
        <View
            android:layout_width="0.5dp"
            android:layout_alignParentEnd="true"
            android:layout_height="match_parent"
            android:background="@color/color_FF0A75C6"/>

        <!--下边框-->
        <View
            android:id="@+id/v_bottom"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"
            android:background="@color/color_FF0A75C6"/>

    </com.de.rocket.ue.layout.PercentRelativeLayout>

</com.de.rocket.ue.layout.PercentRelativeLayout>