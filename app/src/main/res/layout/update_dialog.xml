<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="200dp" android:id="@+id/load"
            android:background="@drawable/corner" android:alpha="0.9" android:layout_centerInParent="true">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@mipmap/img_data_upload_and_loading"
                android:id="@+id/imageView24" android:layout_above="@id/tit"
                android:layout_marginBottom="-20dp"/>
        <TextView
                android:text="@string/app_updating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tit" android:layout_centerInParent="true"
                android:textColor="@android:color/white" android:textSize="20sp" android:translationY="20dp"
                android:gravity="center"/>
        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="loadwhite.json"
                app:lottie_loop="true"
                android:visibility="visible"
                android:layout_alignParentBottom="true" android:layout_marginBottom="10dp"
                android:translationY="70dp"/>
    </RelativeLayout>
</RelativeLayout>