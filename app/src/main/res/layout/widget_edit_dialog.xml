<?xml version="1.0" encoding="utf-8"?>
<com.de.rocket.ue.layout.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_4DCCCCCE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 提示框 -->
    <com.de.rocket.ue.layout.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/bg_ffffff_r8"
        android:gravity="center"
        app:layout_widthPercent="77.8%sw"
        tools:layout_widthPercent="77.8%w">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/app_name"
            android:textColor="@color/color_black"
            android:gravity="left"
            app:layout_marginTopPercent="3.3%sh"
            app:layout_widthPercent="64.4%sw"
            app:layout_textSizePercent="3%sh"
            tools:layout_marginTopPercent="3.3%h"
            tools:layout_widthPercent="64.4%w"
            tools:layout_textSizePercent="3%h" />

        <com.orange.tpms.widget.ClearEditText
            android:id="@+id/et_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:hint="@string/app_name"
            android:drawableEnd="@mipmap/ic_cancel"
            android:textColor="@color/color_black"
            android:background="@null"
            app:layout_marginTopPercent="2.2%sh"
            app:layout_widthPercent="64.4%sw"
            app:layout_textSizePercent="2.8%sh"
            tools:layout_marginTopPercent="2.2%h"
            tools:layout_widthPercent="64.4%w"
            tools:layout_textSizePercent="2.8%h" />

        <View
            app:layout_widthPercent="64.4%sw"
            tools:layout_widthPercent="64.4%w"
            android:background="@color/color_grey"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"/>

        <View
            android:id="@+id/v_split"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_grey"
            app:layout_marginTopPercent="3.3%sh"
            tools:layout_marginTopPercent="3.3%h"/>

        <com.de.rocket.ue.layout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_split"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_click_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:padding="12dp"
                android:text="@string/app_cancel"
                android:textColor="@color/color_FF000000"
                android:textStyle="bold"
                app:layout_textSizePercent="2.5%sh"
                tools:layout_textSizePercent="2.5%h" />

            <View
                android:id="@+id/v_bottom_split"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_grey" />

            <TextView
                android:id="@+id/tv_click_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:padding="12dp"
                android:text="@string/app_sure"
                android:textColor="@color/color_FF398EFF"
                android:textStyle="bold"
                app:layout_textSizePercent="2.5%sh"
                tools:layout_textSizePercent="2.5%h" />
        </com.de.rocket.ue.layout.PercentLinearLayout>

    </com.de.rocket.ue.layout.PercentLinearLayout>

</com.de.rocket.ue.layout.PercentRelativeLayout>
