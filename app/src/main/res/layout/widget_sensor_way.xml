<?xml version="1.0" encoding="utf-8"?>
<com.de.rocket.ue.layout.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_61000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- 提示框 -->
    <com.de.rocket.ue.layout.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_32414e_r8"
        app:layout_widthPercent="80%sw"
        tools:layout_widthPercent="80%w">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:layout_centerHorizontal="true"
            android:text="@string/app_new_sensor"
            android:textColor="@color/color_white"
            app:layout_marginPercent="5%sw"
            app:layout_textSizePercent="2.5%sh"
            tools:layout_marginPercent="2.5%w"
            tools:layout_textSizePercent="2.5%h" />

        <View
            android:id="@+id/v_split"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_content"
            android:background="@color/color_white" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_split"
                android:orientation="horizontal">

            <com.de.rocket.ue.layout.PercentLinearLayout
                    android:id="@+id/pll_scan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/iv_scan"
                        app:layout_heightPercent="10%h"
                        app:layout_widthPercent="10%h"
                        app:layout_marginTopPercent="3%h"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_white"
                        android:text="@string/Scan_Code"
                        app:layout_marginTopPercent="2%h"
                        app:layout_marginBottomPercent="1%h"
                        app:layout_textSizePercent="3%h"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_white"
                        android:text="@string/app_orange_sensor"
                        app:layout_marginBottomPercent="2%h"
                        app:layout_textSizePercent="2.2%h"/>

            </com.de.rocket.ue.layout.PercentLinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"/>

            <com.de.rocket.ue.layout.PercentLinearLayout
                    android:id="@+id/pll_trigger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/iv_tigger"
                        app:layout_heightPercent="10%h"
                        app:layout_widthPercent="10%h"
                        app:layout_marginTopPercent="3%h"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_white"
                        android:text="@string/app_tigger"
                        app:layout_marginTopPercent="2%h"
                        app:layout_marginBottomPercent="1%h"
                        app:layout_textSizePercent="3%h"/>

            </com.de.rocket.ue.layout.PercentLinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"/>

            <com.de.rocket.ue.layout.PercentLinearLayout
                    android:id="@+id/pll_keyin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/iv_keyin"
                        app:layout_heightPercent="10%h"
                        app:layout_widthPercent="10%h"
                        app:layout_marginTopPercent="3%h"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_white"
                        android:text="@string/app_key_in"
                        app:layout_marginTopPercent="2%h"
                        app:layout_marginBottomPercent="1%h"
                        app:layout_textSizePercent="3%h"/>

            </com.de.rocket.ue.layout.PercentLinearLayout>

        </LinearLayout>

    </com.de.rocket.ue.layout.PercentRelativeLayout>

</com.de.rocket.ue.layout.PercentRelativeLayout>
