<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="100dp" android:id="@+id/load"
            android:background="@drawable/corner" android:alpha="0.9" android:layout_centerInParent="true">

        <TextView
                android:text="@string/Sign_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/tit" android:layout_centerInParent="false"
                android:textColor="@android:color/white" android:textSize="20sp"
                android:layout_marginBottom="50dp" android:gravity="center"/>
    </RelativeLayout>
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loadwhite.json"
            app:lottie_loop="true"
            android:visibility="visible"
            android:layout_centerInParent="true" android:translationY="20dp"/>
</RelativeLayout>