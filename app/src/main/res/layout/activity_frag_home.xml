<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ue.kt_frag.Frag_home" android:background="@android:color/white">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/sc">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1"
                        android:id="@+id/bt_check_sensor">

                    <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp" app:srcCompat="@drawable/bt_check_sensor_selecter"
                            android:id="@+id/i1" android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true"/>
                    <TextView
                            android:text="@string/app_home_check_sensor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/no"
                            android:layout_below="@id/i1" android:layout_centerHorizontal="true"
                            android:textColor="#314A56" android:textSize="20sp" android:gravity="center_horizontal|top"
                            android:padding="5dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1"
                        android:id="@+id/bt_program_sensor">

                    <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp" app:srcCompat="@drawable/bt_program_sensor_selecter"
                            android:id="@+id/i2" android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true"/>
                    <TextView
                            android:text="@string/app_home_program_sensor_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/no"
                            android:layout_below="@id/i2" android:layout_centerHorizontal="true"
                            android:textColor="#314A56" android:textSize="20sp" android:gravity="center_horizontal|top"
                            android:padding="5dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1"
                        android:id="@+id/bt_sensor_idcopy">

                    <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp" app:srcCompat="@drawable/bt_id_copy_selecter"
                            android:id="@+id/i3" android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true"/>
                    <TextView
                            android:text="@string/app_home_id_copy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/no"
                            android:layout_below="@id/i3" android:layout_centerHorizontal="true"
                            android:textColor="#314A56" android:textSize="20sp" android:gravity="center_horizontal|top"
                            android:padding="5dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/btn_idcopy_obd">

                    <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp" app:srcCompat="@drawable/bt_relearn_copy"
                            android:id="@+id/i4" android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true" android:alpha="1" android:clickable="false"/>
                    <TextView
                            android:text="@string/idcopyobd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/no"
                            android:layout_below="@id/i4" android:layout_centerHorizontal="true"
                            android:textColor="#314A56" android:textSize="20sp" android:gravity="center_horizontal|top"
                            android:padding="5dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1"
                        android:id="@+id/btn_obd_relearm">

                    <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp" app:srcCompat="@drawable/bt_obdii_relearn_selecter"
                            android:id="@+id/i5" android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true" android:alpha="1" android:clickable="false"/>
                    <TextView
                            android:text="@string/app_home_obdii_relearn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/no"
                            android:layout_below="@id/i5" android:layout_centerHorizontal="true"
                            android:textColor="#314A56" android:textSize="20sp" android:gravity="center_horizontal|top"
                            android:padding="5dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/btn_relearn">

                    <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp" app:srcCompat="@drawable/bt_relearn"
                            android:id="@+id/i6" android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true"/>
                    <TextView
                            android:text="@string/Relearn_Procedure"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/no"
                            android:layout_below="@id/i6" android:layout_centerHorizontal="true"
                            android:textColor="#314A56" android:textSize="20sp" android:gravity="center_horizontal|top"
                            android:padding="5dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/bt_pad_program">

                    <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp" app:srcCompat="@drawable/bt_usb_pad_selecter"
                            android:id="@+id/i7" android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true"/>
                    <TextView
                            android:text="@string/prusbpad"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/no"
                            android:layout_below="@id/i7" android:layout_centerHorizontal="true"
                            android:textColor="#314A56" android:textSize="20sp" android:gravity="center_horizontal|top"
                            android:padding="5dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/bt_pad_copy">

                    <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp" app:srcCompat="@drawable/bt_usb_pad_selecter_copy"
                            android:id="@+id/i8" android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true"/>
                    <TextView
                            android:text="@string/idusbpad"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/no"
                            android:layout_below="@id/i8" android:layout_centerHorizontal="true"
                            android:textColor="#314A56" android:textSize="20sp" android:gravity="center_horizontal|top"
                            android:padding="5dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/bt_shopping">

                    <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp" app:srcCompat="@drawable/bt_online_shopping_selecter"
                            android:id="@+id/i9" android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true" android:alpha="1"/>
                    <TextView
                            android:text="@string/Online_shopping"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/no"
                            android:layout_below="@id/i9" android:layout_centerHorizontal="true"
                            android:textColor="#314A56" android:textSize="20sp" android:gravity="center_horizontal|top"
                            android:padding="5dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/bt_setting">

                    <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp" app:srcCompat="@drawable/bt_setting_selecter"
                            android:id="@+id/i10" android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true"/>
                    <TextView
                            android:text="@string/Setting"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/no"
                            android:layout_below="@id/i10" android:layout_centerHorizontal="true"
                            android:textColor="#314A56" android:textSize="20sp" android:gravity="center_horizontal|top"
                            android:padding="5dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:visibility="gone"
                        android:id="@+id/bt_could">

                    <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp" app:srcCompat="@drawable/bt_cloud_information_selecter"
                            android:id="@+id/i11" android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true" android:alpha="0.7"/>
                    <TextView
                            android:text="@string/Cloud_information"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/no"
                            android:layout_below="@id/i11" android:layout_centerHorizontal="true"
                            android:textColor="#314A56" android:textSize="20sp" android:gravity="center_horizontal|top"
                            android:padding="5dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/bt_manual">

                    <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp" app:srcCompat="@drawable/bt_users_manual_selecter"
                            android:id="@+id/i12" android:layout_centerInParent="false"
                            android:layout_centerHorizontal="true" android:alpha="0.7"/>
                    <TextView
                            android:text="@string/app_user_manual"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/no"
                            android:layout_below="@id/i12" android:layout_centerHorizontal="true"
                            android:textColor="#314A56" android:textSize="20sp" android:gravity="center_horizontal|top"
                            android:padding="5dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>