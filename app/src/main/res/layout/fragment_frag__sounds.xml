<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.orange.tpms.ue.kt_frag.Frag_Sounds" android:background="@android:color/white">

    <!-- TODO: Update blank fragment layout -->
    <com.de.rocket.ue.layout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_bg">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:text="@string/app_sounds_vibrate"
                app:layout_marginTopPercent="3%h"
                app:layout_marginLeftPercent="5%w" android:textSize="18sp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_black"/>

        <com.de.rocket.ue.layout.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="15%h">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:text="@string/app_sounds_shocl"
                    app:layout_marginLeftPercent="12%w"
                    app:layout_textSizePercent="33%h"/>

            <ImageView
                    android:id="@+id/iv_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_check_selecter"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    app:layout_marginRightPercent="5%w"
                    app:layout_heightPercent="80%h"
                    app:layout_widthPercent="80%h"/>

        </com.de.rocket.ue.layout.PercentRelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_black"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:text="@string/app_sounds_ranger_alerts"
                app:layout_marginTopPercent="3%h"
                app:layout_marginLeftPercent="5%w" android:textSize="18sp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_black"/>

        <com.de.rocket.ue.layout.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="15%h">

            <ImageView
                    android:id="@+id/iv_whisper"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_sounds_loud"
                    android:layout_alignParentEnd="true"
                    app:layout_widthPercent="60%h"
                    app:layout_heightPercent="60%h"
                    app:layout_marginRightPercent="5%w"/>

            <ImageView
                    android:id="@+id/iv_lound"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_sounds_whisper"
                    app:layout_widthPercent="60%h"
                    app:layout_heightPercent="60%h"
                    app:layout_marginLeftPercent="5%w"/>

            <SeekBar
                    android:id="@+id/sb_sounds"
                    android:layout_toStartOf="@+id/iv_whisper"
                    android:layout_toEndOf="@+id/iv_lound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="5dp"
                    android:layout_centerVertical="true"
                    android:progressDrawable="@drawable/seekbar_unite_bg"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w"/>

        </com.de.rocket.ue.layout.PercentRelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_black"/>

    </com.de.rocket.ue.layout.PercentLinearLayout>

</RelativeLayout>
