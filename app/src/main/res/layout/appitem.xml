<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="70dp" android:layout_centerInParent="true">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/appim"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:layout_centerInParent="true"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/appname" android:layout_below="@id/appim"
            android:textSize="9sp" android:gravity="center"/>
</RelativeLayout>