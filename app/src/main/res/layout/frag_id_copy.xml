<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_bg">

    <com.orange.tpms.widget.TitleWidget
            android:id="@+id/v_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:layout_below="@id/v_title_bar">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">

            <ImageView
                    android:id="@+id/iv_title"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@mipmap/og_id_copy"
                    app:layout_heightPercent="50%w" android:layout_centerVertical="true"
            />
            <TextView
                    android:text="@string/Methods_of_vehicle_data_selection"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView4"
                    android:layout_toEndOf="@id/iv_title" android:layout_centerVertical="true"
                    android:textColor="@color/rocket_cl_black"
                    android:gravity="start|center_vertical"
                    android:textSize="18sp" android:paddingStart="10dp"/>
        </RelativeLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp" android:src="@color/buttoncolor" android:id="@+id/imageView4"
                android:layout_weight="0" android:background="@android:color/darker_gray"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/b1">

            <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@mipmap/scan_code" android:id="@+id/imageView"
                    android:layout_centerVertical="true"
            />
            <TextView
                    android:text="@string/app_scan_code_up"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView5"
                    android:layout_toEndOf="@id/imageView" android:layout_centerVertical="true"
                    android:textColor="@color/rocket_cl_black" android:gravity="start|center_vertical"
                    android:textSize="18sp" android:paddingStart="10dp"/>
        </RelativeLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp" android:src="@color/buttoncolor" android:id="@+id/imageView5"
                android:layout_weight="0" android:background="@android:color/darker_gray"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/b2">

            <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp" android:src="@drawable/bt_mmy_selecter" android:id="@+id/imageView2"
                    android:layout_centerVertical="true"/>
            <TextView
                    android:text="@string/Methods_of_vehicle_data_selection"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView6"
                    android:layout_toEndOf="@id/imageView2" android:layout_centerVertical="true"
                    android:textColor="@color/rocket_cl_black" android:gravity="start|center_vertical"
                    android:textSize="18sp" android:paddingStart="10dp"/>
        </RelativeLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp" android:src="@color/buttoncolor" android:id="@+id/imageView6"
                android:layout_weight="0" android:background="@android:color/darker_gray"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/b3">

            <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp" android:src="@mipmap/my_favorites" android:id="@+id/imageView3"
                    android:layout_centerVertical="true"/>
            <TextView
                    android:text="@string/app_my_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView7"
                    android:layout_toEndOf="@id/imageView3" android:layout_centerVertical="true"
                    android:textColor="@color/rocket_cl_black" android:gravity="start|center_vertical"
                    android:textSize="18sp" android:paddingStart="10dp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>