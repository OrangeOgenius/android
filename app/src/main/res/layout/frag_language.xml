<?xml version="1.0" encoding="utf-8"?>
<com.de.rocket.ue.layout.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:tools="http://schemas.android.com/tools"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:background="@android:color/white"
                                               android:orientation="vertical"
                                               android:gravity="center_horizontal">

    <com.de.rocket.ue.layout.PercentLinearLayout
            android:layout_below="@+id/v_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_widthPercent="50%w">

        <Button
                android:id="@+id/bt_select_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_long_selecter"
                android:gravity="center"
                android:focusable="true"
                android:textColor="@color/color_white"
                android:text="@string/array_language_english"
                android:textAllCaps="false"
                app:layout_textSizePercent="3%sh"
                app:layout_heightPercent="8%sh"
                app:layout_widthPercent="100%w"
                tools:layout_textSizePercent="3%h"
                tools:layout_heightPercent="8%h"/>

        <Button
                android:id="@+id/bt_select_cn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_long_selecter"
                android:gravity="center"
                android:focusable="true"
                android:textColor="@color/color_white"
                android:text="@string/array_language_simch"
                app:layout_textSizePercent="3%sh"
                app:layout_heightPercent="8%sh"
                app:layout_widthPercent="100%w"
                app:layout_marginTopPercent="8%sh"
                tools:layout_marginTopPercent="8%h"
                tools:layout_textSizePercent="3%h"
                tools:layout_heightPercent="8%h"/>

        <Button
                android:id="@+id/bt_select_tr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_long_selecter"
                android:gravity="center"
                android:focusable="true"
                android:textColor="@color/color_white"
                android:text="@string/array_language_trach"
                app:layout_textSizePercent="3%sh"
                app:layout_heightPercent="8%sh"
                app:layout_widthPercent="100%w"
                app:layout_marginTopPercent="8%sh"
                tools:layout_marginTopPercent="8%h"
                tools:layout_textSizePercent="3%h"
                tools:layout_heightPercent="8%h"/>

        <Button
                android:id="@+id/bt_select_ita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_long_selecter"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:text="@string/array_language_italian"
                android:focusable="true"
                android:textAllCaps="false"
                app:layout_textSizePercent="3%sh"
                app:layout_heightPercent="8%sh"
                app:layout_widthPercent="100%w"
                app:layout_marginTopPercent="8%sh"
                tools:layout_marginTopPercent="8%h"
                tools:layout_textSizePercent="3%h"
                tools:layout_heightPercent="8%h"/>

        <Button
                android:id="@+id/bt_select_deu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_long_selecter"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:text="@string/array_language_german"
                android:textAllCaps="false"
                android:focusable="true"
                app:layout_textSizePercent="3%sh"
                app:layout_heightPercent="8%sh"
                app:layout_widthPercent="100%w"
                app:layout_marginTopPercent="8%sh"
                tools:layout_marginTopPercent="8%h"
                tools:layout_textSizePercent="3%h"
                tools:layout_heightPercent="8%h"/>

    </com.de.rocket.ue.layout.PercentLinearLayout>

</com.de.rocket.ue.layout.PercentRelativeLayout>